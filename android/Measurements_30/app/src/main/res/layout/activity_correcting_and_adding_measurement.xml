<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context=".activities.CorrectingAndAddingMeasurementActivity"
tools:layout_editor_absoluteY="81dp">

<TextView
    android:id="@+id/newMeasurementNameCorrection_tx"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Zmierzona wartość:"
    android:textSize="@dimen/text_size_default"
    android:gravity="center"
    app:layout_constraintBottom_toTopOf="@+id/newMeasurementCorrectedValue_textField"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/newMeasurementCorrectedValue_textField"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="text"
    app:layout_constraintBottom_toTopOf="@+id/unitOfCorrected"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/newMeasurementNameCorrection_tx" />

<TextView
    android:id="@+id/unitOfCorrected"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="jednostka"
    android:textSize="@dimen/text_size_default"
    android:gravity="center"
    app:layout_constraintBottom_toTopOf="@+id/addNewMeasurementCorrectedButton"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/newMeasurementCorrectedValue_textField" />

<Button
    android:id="@+id/addNewMeasurementCorrectedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="DODAJ POMIAR"
    android:textSize="@dimen/text_size_small_button"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/unitOfCorrected" />

</android.support.constraint.ConstraintLayout>
